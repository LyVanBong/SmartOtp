<?xml version="1.0" encoding="utf-8" ?>

<views:ContentPageBase
    x:Class="SmartOtp.Views.AddCodeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SmartOtp.Views"
    Title="{Binding Title}">
    <views:ContentPageBase.Content>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Button
                Command="{Binding AddCodeCommand}"
                CommandParameter="0"
                Text="Setup code" />
            <Button
                Command="{Binding AddCodeCommand}"
                CommandParameter="1"
                Text="Scan Qr" />
            <Button
                Command="{Binding AddCodeCommand}"
                CommandParameter="2"
                Text="Create Qr" />
        </VerticalStackLayout>
    </views:ContentPageBase.Content>
</views:ContentPageBase>