<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartOtp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:smartOtp="clr-namespace:SmartOtp"
    xmlns:views="clr-namespace:SmartOtp.Views">
    <TabBar Route="Main">
        <Tab Title="Home" Icon="icons_home.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate views:HomeView}"
                Route="{x:Static smartOtp:Routes.Home}" />
        </Tab>
        <Tab Title="Add Code" Icon="icons_add_code.png">
            <ShellContent
                Title="Add Code"
                ContentTemplate="{DataTemplate views:AddCodeView}"
                Route="{x:Static smartOtp:Routes.AddCode}" />
        </Tab>
        <Tab Title="Settings" Icon="icons_setting.png">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate views:SettingsView}"
                Route="{x:Static smartOtp:Routes.Settings}" />
        </Tab>
    </TabBar>
</Shell>