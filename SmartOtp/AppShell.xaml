<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartOtp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:smartOtp="clr-namespace:SmartOtp"
    xmlns:views="clr-namespace:SmartOtp.Views">
    <TabBar Route="Main">
        <Tab Title="TOTP">
            <ShellContent
                Title="TOTP"
                ContentTemplate="{DataTemplate views:SettingsView}"
                Route="{x:Static smartOtp:Routes.Settings}" />
        </Tab>
        <Tab Title="HOTP">
            <ShellContent
                Title="HOTP"
                ContentTemplate="{DataTemplate views:HotpView}"
                Route="{x:Static smartOtp:Routes.Hotp}" />
        </Tab>
    </TabBar>
</Shell>